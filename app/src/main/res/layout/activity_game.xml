<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.fillthegrid.MainActivity">

    <TextView
        android:id="@+id/move_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/game_grid_layout"
        android:textAppearance="@style/StandardFontStyle"
        android:gravity="center_horizontal"
        tools:text="@string/move_count"/>


    <GridLayout
        android:id="@+id/game_grid_layout"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </GridLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/replay_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:fabSize="normal"
        android:visibility="gone"
        app:elevation="@dimen/standard_layout_margin"
        android:src="@drawable/replay_level"/>

</RelativeLayout>
